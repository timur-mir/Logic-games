<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_chess"
    tools:context=".MainActivity">

    <home.howework.tictactoe.chess.core.ChessView
        android:id="@+id/chessView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnNewGame" />

    <Button
        android:id="@+id/btnNewGame"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textSize="22sp"
        android:background="@drawable/mybutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:text="Новая игра" />
    <TextView
        android:id="@+id/status_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:background="#00DDC9C9"
        android:gravity="center"
        android:textSize="28sp"
        android:text="Удачной игры"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="238dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>