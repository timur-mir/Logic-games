<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mr5"
    android:orientation="vertical"
    tools:context=".WheelActivity">

    <LinearLayout
        android:id="@+id/imgs"
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:background="@drawable/mybutton2"
            android:src="@drawable/slot5" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:background="@drawable/mybutton2"
            android:src="@drawable/slot5" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:background="@drawable/mybutton2"
            android:src="@drawable/slot5" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:background="@drawable/mybutton2"
            android:src="@drawable/slot5" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/imgs2"
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgs">

        <ImageView
            android:id="@+id/img5"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:background="@drawable/mybutton2"
            android:src="@drawable/slot5" />

        <ImageView
            android:id="@+id/img6"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:background="@drawable/mybutton2"
            android:src="@drawable/slot5" />

        <ImageView
            android:id="@+id/img7"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:background="@drawable/mybutton2"
            android:src="@drawable/slot5" />

        <ImageView
            android:id="@+id/img8"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:background="@drawable/mybutton2"
            android:src="@drawable/slot5" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/imgs3"
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgs2">

        <ImageView
            android:id="@+id/img9"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:background="@drawable/mybutton2"
            android:src="@drawable/slot5" />

        <ImageView
            android:id="@+id/img10"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:background="@drawable/mybutton2"
            android:src="@drawable/slot5" />

        <ImageView
            android:id="@+id/img11"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:background="@drawable/mybutton2"
            android:src="@drawable/slot5" />

        <ImageView
            android:id="@+id/img12"
            android:layout_width="75dp"
            android:layout_height="150dp"
            android:background="@drawable/mybutton2"
            android:src="@drawable/slot5" />
    </LinearLayout>
    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:gravity="center_horizontal"
        android:textColor="#76022A"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgs3" />

    <Button
        android:id="@+id/btn"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mybutton2"
        android:text="Крути"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/msg"
        app:layout_constraintVertical_bias="0.272" />

</androidx.constraintlayout.widget.ConstraintLayout>