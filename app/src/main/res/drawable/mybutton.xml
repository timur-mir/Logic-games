<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="12dip" />
            <stroke android:width="1dip" android:color="#403169" />
            <gradient android:angle="-90" android:startColor="#64FFDA" android:centerColor="@color/colorAccent" android:endColor="#F83F05"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke android:width="1dip" android:color="#0C9954" />
            <solid android:color="#B88443"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="12dip" />
            <stroke android:width="1dip" android:color="#5e7974" />
            <gradient android:angle="-90" android:startColor="#4F3C84" android:centerColor="#CB4014" android:endColor="#2DBD40" />
        </shape>
    </item>
</selector>